<% @page_title = "Delete Post" %>


<div class="subjects delete">
  <h2>Delete Subject</h2>

  <%= form_for(@blog, :method => 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this post?</p>

    <p class="reference-name"><%= f.object.title %></p>

    <div class="form-buttons">
      <%= f.submit("Delete Post") %>
    </div>

  <% end %>
</div>